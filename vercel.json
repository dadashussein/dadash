{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ],
    "env": {
        "DB_CONNECTION_STRING": "@my-db-connection-string"
    },
    "functions": {
        "api": {
            "memory": 512,
            "maxDuration": 10
        }
    }
}